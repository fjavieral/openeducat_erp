<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_surnames_inherit_op_student_form" model="ir.ui.view">
            <field name="name">surnames.inherit.op.student.form</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='middle_name']" position="attributes">
                    <attribute name="string">Middle Name</attribute>
                    <attribute name="placeholder">Middle Name</attribute>
                </xpath>
                <xpath expr="//field[@name='last_name']" position="replace">
                    <field name="last_name" string="Last Name" placeholder="Last Name" required="0"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
